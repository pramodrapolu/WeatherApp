<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/padding_16dp">

    <TextView
        android:id="@+id/weather_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/default_text_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="2018-02-02" />

    <TextView
        android:id="@+id/weather_item_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding_16dp"
        android:textSize="@dimen/temp_list_text_size"
        android:layout_marginTop="@dimen/padding_8dp"
        app:layout_constraintTop_toBottomOf="@+id/weather_item_date"
        tools:text="75F" />


    <TextView
        android:id="@+id/weather_min_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/padding_16dp"
        android:textSize="@dimen/default_text_size"
        app:layout_constraintBottom_toBottomOf="@+id/weather_item_date"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="min_temp" />

    <TextView
        android:id="@+id/weather_max_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_8dp"
        android:textSize="@dimen/default_text_size"
        app:layout_constraintBottom_toBottomOf="@+id/weather_min_temp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.874"
        app:layout_constraintStart_toEndOf="@+id/weather_item_temp"
        app:layout_constraintTop_toTopOf="@+id/weather_item_temp"
        app:layout_constraintVertical_bias="0.0"
        tools:text="max_temp" />

</android.support.constraint.ConstraintLayout>